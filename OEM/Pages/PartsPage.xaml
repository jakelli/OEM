<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:forms="clr-namespace:Lottie.Forms;assembly=Lottie.Forms"
             x:Class="OEM.Pages.GaragePage"
             Title="Part Catalog">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">

            <StackLayout Padding="0,60,0,0" HorizontalOptions="CenterAndExpand" VerticalOptions="Center">
                <forms:AnimationView
                    HeightRequest="450"
                    WidthRequest="450"
                    Animation="under_construction.json"
                    AutoPlay="True"
                    Loop="True"/>
            </StackLayout>
            <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="Start">
                <Label Padding="0,0,0,0" Text="Parts catalog is under construction!" FontAttributes="Bold" FontSize="Medium" TextColor="{StaticResource NeutralGray8}"
                   HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand"/>
            <Label Text="Please come back later" FontSize="Small" TextColor="{StaticResource NeutralGray5}"
                   HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand"/>
            </StackLayout>
            
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
